<?xml version='1.0' encoding='utf-8'?>
<widget id="com.silvernet.silvertimetable" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Plan WZIM</name>
    <description>
        WZiIM timetable app
    </description>
    <author email="kontakt@silver.sggw.pl" href="http://silver.sggw.pl">
        KNI Silver.NET
    </author>
    <content src="index.html" />
    <allow-navigation href="https://silvertimetable.azurewebsites.net/*" />
    <platform name="android">
        <resource-file src="google-services.json" target="google-services.json" />
        <icon density="mdpi" src="www/res/android/mdpi.png" />
        <icon density="hdpi" src="www/res/android/hdpi.png" />
        <icon density="xhdpi" src="www/res/android/xhdpi.png" />
        <icon density="xxhdpi" src="www/res/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="www/res/android/xxxhdpi.png" />
        <splash density="port-hdpi" src="www/res/androidSplash/HDPI.png" />
        <splash density="port-ldpi" src="www/res/androidSplash/LDPI.png" />
        <splash density="port-mdpi" src="www/res/androidSplash/MDPI.png" />
        <splash density="port-xhdpi" src="www/res/androidSplash/XHDPI.png" />
        <splash density="port-xxhdpi" src="www/res/androidSplash/XXHDPI.png" />
        <splash density="port-xxxhdpi" src="www/res/androidSplash/XXXHDPI.png" />
    </platform>
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#3f51b5" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="Orientation" value="portrait" />
    <engine name="android" spec="^6.3.0" />
    <engine name="ios" spec="^4.5.4" />
    <plugin name="phonegap-plugin-push" spec="^2.1.0">
        <variable name="FCM_VERSION" value="11.0.1" />
    </plugin>
    <plugin name="cordova-android-support-gradle-release" spec="^1.1.5">
        <variable name="ANDROID_SUPPORT_VERSION" value="26.+" />
    </plugin>
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.4" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <plugin name="cordova-plugin-statusbar" spec="^2.3.0" />
    <plugin name="cordova-plugin-ms-azure-mobile-apps" spec="^2.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-file" spec="^5.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.1" />
    <plugin name="cordova-plugin-x-toast" spec="^2.6.0" />
</widget>
